#!/bin/sh

# Power menu script using rofi

CHOSEN=$(echo -e "Lock\nSuspend\nReboot\nShutdown\nLog Out" | rofi -dmenu -i -p "Power Menu")

case "$CHOSEN" in
  "Lock") betterlockscreen -l ;;
  "Suspend") systemctl suspend-then-hibernate ;;
  "Reboot") reboot ;;
  "Shutdown") poweroff ;;
  "Log Out") bspc quit ;;
  *) exit 1 ;;
esac
