#!/bin/sh

# Increment, decrement, or mute the volume using Pipewire and send a notification

case $1 in
	up)
		wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
		wpctl set-volume -l 2.0 @DEFAULT_AUDIO_SINK@ 5%+
		;;
	down)
		wpctl set-mute @DEFAULT_AUDIO_SINK@ 0
		wpctl set-volume -l 2.0 @DEFAULT_AUDIO_SINK@ 5%-
		;;
	mute)
		wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
		;;
esac

VOLUME=$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | tr -dc '0-9' | sed 's/^0\{1,2\}//')


DIR="$HOME/.local/share/icons/dunst/"
send_notification() {
    if [ "$1" = "mute" ]; then
        ICON="mute"
        TEXT="Currently muted"
    elif [ "$VOLUME" -lt 33 ]; then
        ICON="low"
        TEXT="Currently at ${VOLUME}%"
    elif [ "$VOLUME" -lt 66 ]; then
        ICON="medium"
        TEXT="Currently at ${VOLUME}%"
    else
        ICON="high"
        TEXT="Currently at ${VOLUME}%"
    fi

    dunstify -a "Volume" -r 9993 -h int:value:"$VOLUME" -i "$DIR/volume-$ICON.svg" "Volume" "$TEXT" -t 2000
}

case $1 in
	mute)
		case "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" in
			*MUTED* ) send_notification mute;;
			*       ) send_notification;;
		esac;;
	*)
		send_notification;;
esac
